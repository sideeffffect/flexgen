{% if task.accepted -%}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>[FlexgetTask] {% set comma = joiner(", ") %}{% for entry in task.accepted %}{{ comma() }}{{ entry.tvdb_series_name }} - {{ entry.tvdb_ep_id }} - {{ entry.quality }}{% endfor %}</title>
    {% if task.accepted[0].tvdb_posters %}
    <style type="text/css">
.description {
  background-image: linear-gradient(to bottom, rgba(255,255,255,0.75) 0%,rgba(255,255,255,0.75) 100%), url("{{task.accepted[0].tvdb_posters[0]}}");
  background-size: 100%;
  background-repeat: no-repeat;
}
p {
  margin: 0px;
}
h1 {
  margin-top: 0px;
  padding-top: 0.67em;
}
.torrent {
  margin: 0px;
  padding-top: 1em;
  padding-bottom: 1em;
}
    </style>
    {% endif %}
  </head>
  <body>
    {% for entry in task.accepted %}

      <p align="center">
        {% if entry.tvdb_banner is defined %}
        <a href="{{ entry.tvdb_url }}">
          <img src="{{ entry.tvdb_banner }}" width="100%" alt="tvdb_banner"/>
        </a>
        {% else %}
        <i>Series banner not available</i>
        {% endif %}
      </p>

    <div class="description">

      <h1 align="center">{{ entry.tvdb_series_name }}</h1>
      <h2 align="center"><font face="monospace">{{ entry.tvdb_ep_id }}</font></h2>
      <h3 align="center"><font face="monospace">{{ entry.quality }}</font></h3>

      <table border="0" width="100%">
        <tr>
          <td>Name: </td>
          <td align="right">{{ entry.tvdb_ep_name | default("-") }} <br/></td>
        </tr>
        <tr>
          <td>Air date: </td>
          <td align="right">{{ entry.tvdb_ep_air_date.strftime("%A, %-d %B") | default("-") }} <br/></td>
        </tr>
        <tr>
          <td>Delay: </td>
          <td align="right">{% if (entry.tvdb_ep_air_date is defined) and (now is defined) %}{{ (now - entry.tvdb_ep_air_date).days }} days ago{% else %}-{% endif %} <br/></td>
        </tr>
        <tr>
          <td>Runtime: </td>
          <td align="right">{% if entry.tvdb_runtime is defined %}{{ entry.tvdb_runtime }} minutes{% else %}-{% endif %} <br/></td>
        </tr>
        <tr>
          <td>Rating: </td>
          <td align="right">{{ entry.tvdb_ep_rating if entry.tvdb_ep_rating != 0.0 else "-" | default("-") }} <br/></td>
        </tr>
        <tr>
          <td>Size: </td>
          <td align="right">{{ entry.content_size | round | int }} MB <br/></td>
        </tr>
        <tr>
          <td>Task: </td>
          <td align="right"><font face="monospace">{{ task.name }}</font> <br/></td>
        </tr>
      </table>

      <p align="center" class="torrent">
        <a href="https://torrentz2.eu/{{ entry.torrent_info_hash | lower}}" target="_blank">
          <font face="monospace">
            <font size="0.5">
              {{ entry.title }}
              <br/>
              {{ entry.torrent_info_hash | lower}}
            </font>
          </font>
        </a>
      </p>

    </div>

    <p align="center">
      {% if entry.tvdb_ep_image is defined %}
      <img src="{{ entry.tvdb_ep_image }}" width="100%" alt="tvdb_ep_image"/>
      {% else %}
      <i>Episode image not available</i>
      {% endif %}
    </p>

    {% endfor %}
  </body>
</html>
{% endif %}
